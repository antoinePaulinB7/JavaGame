package environnement;

/**
 * Classe qui cree un objet bloc
 * @author Antoine
 *
 */
public class Bloc {
	private double positionX, positionY;
	
	/**
	 * Constructeur de l'objet bloc
	 * @param positionX La position en x
	 * @param positionY La position en y
	 */
	public Bloc(double positionX, double positionY){
		this.positionX = positionX;
		this.positionY = positionY;
	}
	/**
	 * Constructeur de l'objet bloc
	 * @param positionX La position en x en entier
	 * @param positionY La position en y en entier
	 */
	public Bloc(int positionX, int positionY){
		this((double)positionX, (double)positionY);
	}
	/**
	 * Envoye la position en x du bloc
	 * @return positionX La position en x
	 */
	public double getPositionX() {
		return positionX;
	}
	/**
	 * Envoye la postion en y du bloc 
	 * @return positionY La position en y
	 */
	public double getPositionY() {
		return positionY;
	}
	/**
	 * Definit la composante x de la position du bloc
	 * @param positionX La composante x d'une position
	 */
	public void setPositionX(double positionX) {
		this.positionX = positionX;
	}	
	/**
	 * Definit la composante y de la position du bloc
	 * @param positionY La composante y d'une position
	 */
	public void setPositionY(double positionY) {
		this.positionY = positionY;
	}	
}
